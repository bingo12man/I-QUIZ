<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Sign-Up</title>
      <link rel="stylesheet" type="text/css" href="/css/signup.css">
  </head>
  <body>
  <div class="container container1 ">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <% if (errorMessage) { %>
              <p class="card-title text-center" style="color:red;font-size: 14px;"><%= errorMessage %></p>
            <% } %>
            <form class="form-signin" action="/signup" method="post" novalidate>
                <div class="form-label-group">
                <input type="text" id="fname" name="fname" class="form-control <%= validationErrors.find(e => e.param === 'fname') ? 'invalid' : '' %>" placeholder="<%= oldinput.fname? '' : 'First Name' %>"value="<%= oldinput.fname %>" required autofocus>
                  <label for="fname">First Name</label>
              </div>
                <div class="form-label-group">
                <input type="text" id="lname" name="lname" class="form-control <%= validationErrors.find(e => e.param === 'lname') ? 'invalid' : '' %>" placeholder="<%= oldinput.lname? '' : 'Last Name' %>" value="<%= oldinput.lname %>" required autofocus>
                  <label for="lname">Last Name</label>
              </div>
                <div class="form-label-group">
                <input type="email" id="mail" name="mail" class="form-control <%= validationErrors.find(e => e.param === 'mail') ? 'invalid' : '' %>" placeholder="<%= oldinput.mail? '' : 'E Mail' %>" value="<%= oldinput.mail %>" required>
                <label for="mail">E-mail</label>
              </div>
              <div class="form-label-group">
                <input type="text" id="inputEmail" name="username" class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'invalid' : '' %>" placeholder="<%= oldinput.username? '' : 'User Name' %>" value="<%= oldinput.username %>" required autofocus>
                  <label for="inputEmail">User Name</label>
              </div>
             <div class="form-label-group">
                <input type="password" name="password" id="inputPassword" class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" placeholder="Password" value='' required>
                <label for="inputPassword">Password</label>
              </div>
                 <div class="form-label-group">
                <input type="password" name="confirmpassword" id="inputPassword1" class="form-control <%= validationErrors.find(e => e.param === 'confirmpassword') ? 'invalid' : '' %>" placeholder="Re-Enter Password" value='' required>
                <label for="inputPassword1">Re-Enter Password</label>
              </div>
                 <div >
                 <hr class="my-4">
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-lg btn-primary btn-block text-uppercase" style="background-color:black; color:white;  border-color:black;" id="signin" type="submit" >Sign Up</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
  </body>
</html>